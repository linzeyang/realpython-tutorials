    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "8080"
            ],
            "django": true
        },
        {
            "name": "Python: Django w/ uvicorn",
            "type": "python",
            "request": "launch",
            "program": "uvicorn",
            "args": [
                "todo_project.asgi:application",
                "--port",
                "8080"
            ],
            "django": true
        }
    ]
}
